	public static void playSound(File f)
	{	
		try {
		    AudioInputStream stream;
		    AudioFormat format;
		    DataLine.Info info;
		    Clip clip;

		    stream = AudioSystem.getAudioInputStream(soundFile);
		    format = stream.getFormat();
		    info = new DataLine.Info(Clip.class, format);
